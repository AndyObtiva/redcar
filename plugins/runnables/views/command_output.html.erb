
<script type="text/javascript" src="file://<%= Redcar::HtmlView.jquery_path %>"></script>
<link rel="stylesheet" href="file://<%= Redcar::HtmlView.default_css_path %>" type="text/css" media="screen">

<style>
  .stdout {
    padding: 0px;
    margin: 0px;
  }

  .stderr {
    padding: 0px;
    margin: 0px;
    color: #FF0000;
  }

  .stdout pre {
      padding: 0px;
      margin: 0px;
  }
  .stderr pre {
      padding: 0px;
      margin: 0px;
  }
  
  #output {
    font-family: Monaco, Consolas, fixed;
    font-size: 12px;
  }
  
  .ansi-gray  { color: #666; }
  .ansi-red   { color: #f00; }
  .ansi-green { color: #0f0; }
  .ansi-bold  { font-weight: bold; }
</style>

<h3><%= @title %></h3>
<pre><%= command %></pre>
<hr />
<div id="output">
</div>