#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), %w(.. lib redcar))

if ARGV.first == "install"
  require 'redcar/installer'

  installer = Redcar::Installer.new
  installer.install
else
  exit if Redcar.try_to_load_via_drb
  Redcar.ensure_jruby
  Redcar.load
  Redcar::Top.start
  Redcar.pump
end